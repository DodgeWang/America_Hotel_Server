{{#section 'head'}}
    <link href="assets/css/form.css" rel="stylesheet">
{{/section}}


<div class="main_container" id="forms_page">
        <div class="row-fluid">
          <ul class="breadcrumb">
            <li><a href="#">Home</a> <span class="divider">/</span></li>
            <li class="active">{{language.RoomTypeInfoPage.EditRoomType}}</li>
          </ul>
        </div>
        <!-- 信息 -->
        <div class="row-fluid" id="loginInfoBox">
          <div class="widget widget-padding span12">
            <div class="widget-header">
              <i class="icon-list-alt"></i><h5>{{language.RoomTypeInfoPage.EditRoomType}}</h5>
            </div>
            <div class="widget-body">
              <div class="widget-forms clearfix">
                <form class="form-horizontal">
                  <div class="control-group" style="display:none;">
                    <label class="control-label">Id</label>
                    <div class="controls">
                      <input class="span7" type="text" name="typeId" value={{data.Id}}>
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label">{{language.RoomTypeInfoPage.RoomTypeName}}</label>
                    <div class="controls">
                      <input class="span7" type="text" name="typeName" value={{data.Type}}>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>  


       <!-- 提交按钮 -->
        <div class="row-fluid" style="text-align:center">
           <button type="button" class="btn btn-success" id="form_sublime">submit</button>
        </div>
</div>


{{#section 'script'}}
    <script type="text/javascript" src="assets/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="assets/js/bootstrap-datepicker.js"></script>
    <script type="text/javascript" src="controller/EditRoomType.js"></script>
{{/section}}