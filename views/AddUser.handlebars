                  </div>

                  <div class="control-group">
                    <label>{{language.userInfo.WorkHours}}</label>
                    <div class="controls">
                      <input class="span7 tip" name="Work_hours" type="text">
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label">{{language.userInfo.WorkAtNight}}</label>
                    <div class="controls controls-wdq">
                      <label class="radio">
                        <input type="radio" name="Work_at_night" value="1" checked>
                        Yes
                      </label> 
                      <label class="radio">
                        <input type="radio" name="Work_at_night" value="0">
                        No
                      </label> 
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label">{{language.userInfo.WorkAvaliableDate}}</label>
                    <div class="controls">
                      <div class="input-append date span5 datepicker datepicker-basic" data-date="" data-date-format="dd-mm-yyyy">
